<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/soft_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="activation_code_et">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/soft_gray</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">1</item>
    </style>


    <style name="iv_bottom_vector">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
    </style>

    <style name="tv_large_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="dialog_congratulation_animation">
        <item name="android:windowEnterAnimation">@anim/dialog_congratulation_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_congratulation_exit</item>
    </style>

    <style name="item_rv_user_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/_7sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="tv_user_medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="image_logo">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_85sdp</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
    </style>

    <style name="out_line_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">1px</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="android:state_focused">true</item>
        <item name="hintTextAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
        <item name="hintTextColor">@color/color_edittext</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_4sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_4sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_4sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_4sdp</item>
        <item name="theme">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>
<style name="out_line_et_no_hint_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxStrokeWidth">1px</item>
    <item name="hintAnimationEnabled">false</item>
    <item name="hintEnabled">false</item>

    <item name="hintTextAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_4sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_4sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_4sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_4sdp</item>
        <item name="theme">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="profile_tittles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>