<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_110sdp"
    android:background="@color/soft_gray"
    android:orientation="horizontal"
    android:weightSum="3"
    android:layout_margin="@dimen/_5sdp"
    >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp"
        android:weightSum="4">

        <TextView
            android:id="@+id/item_rv_user_tv_name"
            style="@style/item_rv_user_tv"
            android:text="all"
            app:drawableStartCompat="@drawable/ic_name" />

        <TextView
            android:id="@+id/item_rv_user_tv_jop"
            style="@style/item_rv_user_tv"
            android:text="all"

            app:drawableStartCompat="@drawable/ic_jop" />

        <TextView
            android:id="@+id/item_rv_user_tv_location"

            style="@style/item_rv_user_tv"
            android:text="all"
            app:drawableStartCompat="@drawable/ic_location" />

        <TextView
            android:id="@+id/item_rv_user_tv_kind"

            style="@style/item_rv_user_tv"
            android:text="all"
            app:drawableStartCompat="@drawable/ic_kind" />


    </LinearLayout>
</LinearLayout>